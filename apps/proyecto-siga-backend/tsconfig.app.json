{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "out-tsc/proyecto-siga-backend",
    "types": [
      "node"
    ],
    "rootDir": "../../",
    "resolveJsonModule": true,
    "composite": false,
    "declarationMap": false,
    "emitDeclarationOnly": false,
    "tsBuildInfoFile": "out-tsc/proyecto-siga-backend/tsconfig.app.tsbuildinfo"
  },
  "include": [
    "src/**/*.ts",
    "../../packages/**/*.ts",
    "../../packages/**/*.json"
  ],
  "exclude": [
    "out-tsc",
    "dist",
    "jest.config.ts",
    "src/**/*.spec.ts",
    "src/**/*.test.ts"
  ]
}
